<div class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        <% if flash[:alert] %>
          <span class="text-red-600"><%= flash[:alert] %></span>
        <% end %>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="space-y-4 rounded-md ">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full rounded-lg border-gray-300 shadow-md focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "mt-1 block w-full rounded-lg border-gray-300 shadow-md focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>
      </div>

      <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-4" %>
    <% end %>

    <div class="text-sm text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
